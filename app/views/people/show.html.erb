<p><%= @person.name %></p>
<p><%= @person.phone_number %></p>
<p><%= @person.refugee %></p>

<p><%= link_to "edit", edit_person_path(@person) %></p>
<%= form_for @person, method: :delete do |form| %>
  <%= form.submit 'delete' %>
<% end %>

<h2>Events</h2>

<ul>
  <% @person.events.each do |event| %>
    <li><%= link_to event.name, event_path(event) %></li>
  <% end %>
</ul>

<h2>Invites</h2>

<ul>
  <% @person.invitees.each do |invite| %>
    <li><%= invite.event.name %></li>
  <% end %>
</ul>

<%= form_for Attendance.new do |form| %>
  <%= form.hidden_field :invitee_id, value: @person.id %>
  <div class="form-group">
    <%= form.label :event %>
    <%= form.select :event_id, Event.all.collect {|e| [e.name, e.id]}, class: 'form-control' %>
  </div>
  <%= form.submit %>
<% end %>
