<p><%= @event.name %></p>
<p><%= @event.starts_at %></p>
<p><%= @event.location %></p>

<p><%= link_to "edit", edit_event_path(@event) %></p>
<%= form_for @event, method: :delete do |form| %>
  <%= form.submit 'delete' %>
<% end %>

<hr />

<h2>Attendees</h2>

<ul>
  <% @event.people.each do |person| %>
    <li><%= link_to person.name, person_path(person) %></li>
  <% end %>
</ul>
